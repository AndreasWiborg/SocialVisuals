# Public API endpoint for the text overlay service
NEXT_PUBLIC_API_BASE=https://YOUR-TEXT-OVERLAY-SERVICE.onrender.com

# Supabase project (available publicly in the frontend bundle)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR-SUPABASE-PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# Server-side Supabase access used by Next.js route handlers
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# Optional: URLs for static template assets
PUBLIC_SVGS_MANIFEST_URL=https://YOUR-SUPABASE-PROJECT.supabase.co/storage/v1/object/public/public-assets/templates/manifest.json
PUBLIC_ASSETS_BASE=https://YOUR-SUPABASE-PROJECT.supabase.co/storage/v1/object/public/public-assets/templates/assets

# LLM provider configuration (optional override)
LLM_PROVIDER=openai
